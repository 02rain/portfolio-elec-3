<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>NBI • About</title>
<link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <div class="wrap">
    <h1><a href="/">National Bureau of Investigation</a></h1>
    <ul class="nav-links">
      <li><a href="/about">About</a></li>
      <li><a href="/services">Services</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </div>
    <div class="wrap"><a class="home" href="/">← Back to Home</a></div>
  </header>

  <main class="wrap">
    <h1>About Us</h1>

    <div class="student-grid">
      <% studentData.forEach(function(studentinfo){ %>
        <div class="card">
          <div><span class="label">Name</span> <strong><%= studentinfo.name %></strong></div>
          <div><span class="label">Age</span> <%= studentinfo.age %></div>
          <div><span class="label">Course</span> <%= studentinfo.course %></div>
          <div><em><%= helloFunc(studentinfo.name) %></em></div>
        </div>
      <% }) %>
    </div>
  </main>

  <footer>
    <div class="wrap">© 2025 National Bureau of Investigation — Black Portal</div>
  </footer>
</body>
</html>
